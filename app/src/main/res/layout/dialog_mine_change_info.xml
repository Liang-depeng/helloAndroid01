<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fcfcfc"
     >
   	<TextView 
   	    android:textColor="@color/dialog_content"
   	    android:textSize="17sp"
   	    android:text="@string/set_nickname"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_centerHorizontal="true"
   	    android:layout_marginTop="30dp"
   	    android:id="@+id/dialog_title"
   	    />
   	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/black"
	    android:alpha="0.25"
	    android:layout_marginTop="26.5dp"
	    android:layout_marginLeft="17dp"
	    android:layout_marginRight="17dp"
	  	android:layout_below="@+id/dialog_title"
	  	android:id="@+id/above_line"
	    />
	<EditText 
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:id="@+id/mine_info_content"
	    android:layout_marginLeft="17dp"
	    android:layout_marginRight="17dp"
	    android:inputType="text"
	    android:layout_below="@+id/above_line"
	    android:background="@null"
	    />
	
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/black"
	    android:alpha="0.25"
	    android:layout_marginLeft="17dp"
	    android:layout_marginRight="17dp"
	  	android:layout_below="@+id/mine_info_content"
	    />
	<View 
	    android:layout_width="0.5dp"
	    android:layout_height="30dp"
	    android:background="@color/black"
	    android:alpha="0.25"
	    android:layout_toLeftOf="@+id/mine_info_content"
	    android:layout_marginLeft="17dp"
	    android:layout_below="@+id/above_line"
	    />
	<View 
	    android:layout_width="0.5dp"
	    android:layout_height="30dp"
	    android:background="@color/black"
	    android:alpha="0.25"
	    android:layout_toRightOf="@+id/mine_info_content"
	   	android:layout_marginRight="16.5dp"
	   	android:layout_below="@+id/above_line"
	    />
	

	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/black"
	    android:alpha="0.25"
	    android:layout_below="@+id/mine_info_content"
	    android:layout_marginTop="28.5dp"
	    android:id="@+id/line"
	    />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="44dp"
	    android:layout_below="@+id/line"
	    
	    >
	    <Button 
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="取消"
	        android:textSize="17sp"
	        android:textColor="@color/dialog_text"
	        android:background="@null"
	        android:id="@+id/dialog_cancle"
	        />
	    <View 
	        android:layout_width="0.5dp"
	        android:layout_height="fill_parent"
	        android:background="@color/black"
	        android:alpha="0.25"
	        />
	     <Button 
	         android:layout_gravity="center"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="确定"
	        android:textSize="17sp"
	        android:textColor="@color/dialog_text"
	        android:background="@null"
	        android:id="@+id/dialog_sure"
	        />
	</LinearLayout>
</RelativeLayout>
